@import "search.wxss";
.search-res-list {
  margin-top: 225rpx;
  padding: 0 48rpx;
}
.res-item {
  margin-bottom: 60rpx;
}
.res-img-wrap {
  position: relative;
  width: 360rpx;
  width: 100%;
}
.res-img {
  width: 100%;
  height: 360rpx;
  border-radius: 4rpx;
}
.res-logo {
  position: absolute;
  left: 40rpx;
  top: -8rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 4rpx;
}
.like-btn {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 40rpx;
}
.res-content-wrap {
  position: relative;
  margin-top: 20rpx;
}
.res-des {
  padding-top: 12rpx;
  font-size: 20rpx;
  color: rgb(139,139,139);
}
.res-title {
  margin: 10rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  color: rgb(60,61,60);
}
.res-location {
  font-size: 20rpx;
  color: rgb(60,61,60);
}
.res-limit-length {
  max-width: 410rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.res-price-wrap {
  box-sizing: border-box;
  position: absolute;
  right: 0;
  top: 0;
  width: 204rpx;
  /*height: 132rpx;*/
  border: 2rpx solid rgb(35,31,32);
  border-radius: 4rpx;
}
.res-price-header {
  padding: 6rpx 0;
  text-align: center;
  background: rgb(35,31,32);
  font-size: 20rpx;
  color: #fff;
}
.res-price {
  display: inline;
  font-size: 28rpx;
  margin-right: 8rpx;
}
.res-price-item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.res-price-header .res-price-item:first-child{
  margin-bottom: 2rpx;
}
.res-discount {
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: rgb(35,31,32);
}
