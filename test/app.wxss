.content {
  padding-left: 56rpx;
}

/*****************Font*/

.textCenter {
  text-align: center;
}

.blackText {
  color: #251f1f;
}

.whiteText {
  color: #fff;
}

.grayText, .greyText {
  color: #8b8b89;
}

.yellowText {
  color: #e6cb15;
}

.black3b {
  color: #3b3d3c;
}

.font40 {
  font-size: 40rpx;
}

.font32 {
  font-size: 32rpx;
}

.font28 {
  font-size: 28rpx;
}

.font24 {
  font-size: 24rpx;
}

.font20 {
  font-size: 20rpx;
}
.gray28,.grey28{
  font-size: 28rpx;
  color: #8b8b89;
}
.black28{
  font-size: 28rpx;
  color: #251f1f;
}
/*****************Background-Color*/

.yellowBg {
  background-color: #e6e522;
}

.grayBg {
  background-color: #d3d3d3;
}

.loadingIcon {
  width: 60rpx;
  height: 60rpx;
}

/*****************Other*/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.headIcon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.textCenterB {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname {
  margin-top: 30rpx;
}

.inputBg {
  width: 640rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 2rpx solid #bbbbb9;
}

.btn {
  width: 640rpx;
  height: 100rpx;
  display: block;
  margin-left: 0rpx;
  margin-top: 60rpx;
  line-height: 100rpx;
}

.bold {
  font-weight: bold;
}

.contentBg {
  background-color: #fffffc;
}

.nowarp {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.underline {
  text-decoration: underline;
}
